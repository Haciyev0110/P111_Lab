@model Slider
@{
    ViewData["Title"] = "Delete";
}

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h3>@Html.Raw(Model.Title)</h3>
                <img src="~/images/@Model.Image" width="350px"  />
                <p class="text-danger mt-3">Are you sure delete this?</p>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <form method="post">
                    <input type="submit" class="btn btn-danger" value="Delete" />
                </form>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12">
                <a asp-action="Index"><i class="fas fa-arrow-left"></i> Go back</a>
            </div>
        </div>
    </div>

