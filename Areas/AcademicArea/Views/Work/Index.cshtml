@model IEnumerable<Work>
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <a asp-action="Create" class="btn btn-primary">Create</a>
                <div class="card-body">
                    <h5 class="card-title m-b-0">Slider</h5>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Title</th>
                            <th scope="col">Description</th>
                            <th scope="col">Icon</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int count = 1;
                        }
                        @foreach (var work in Model)
                        {
                        <tr>
                            <th scope="row">@count</th>
                            <td>@Html.Raw(work.Title)</td>
                            <td>
                            @if (work.Description.Length > 20)
                            {
                               @Html.Raw( work.Description.Substring(0, 20) + "...");
                            }
                            else
                            {
                               @Html.Raw(work.Description);
                            }
                            </td>

                            <td>
                                <div class="@work.IconField text-white" style="background-color:green;border-radius:20%;width:80px;
                                 height:80px;text-align:center;padding-top:18px;font-size:40px;"></div>
                            </td>

                            <td>
                                <a asp-action="Detail" asp-route-id="@work.Id" class="btn btn-success">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Update" asp-route-id="@work.Id" class="btn btn-warning">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@work.Id" class="btn btn-danger">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                            count++;
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


